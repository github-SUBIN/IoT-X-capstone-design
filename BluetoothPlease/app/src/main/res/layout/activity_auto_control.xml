<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#0696B4"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textFontWeight="6000"
        android:textColor="#1B262C"
        android:textStyle="bold"
        android:fontFamily="@font/nanumsquareroundr"
        android:padding="0dp"
        android:text="야외 조도에 따라"
        android:textSize="24sp"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textFontWeight="6000"
        android:textColor="#1B262C"
        android:textStyle="bold"
        android:fontFamily="@font/nanumsquareroundr"
        android:padding="0dp"
        android:layout_marginBottom="40dp"
        android:text="자동으로 밝기를 조절하는 기능입니다"
        android:textSize="24sp"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/autoStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_second"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:textFontWeight="9000"
        android:textColor="#1B262C"
        android:fontFamily="@font/nanumsquareroundr"
        android:text="자동 밝기 조절 시작" />

    <Button
        android:id="@+id/autoEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_second"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:textFontWeight="9000"
        android:textColor="#1B262C"
        android:fontFamily="@font/nanumsquareroundr"
        android:text="자동 밝기 조절 끄기"/>

</LinearLayout>